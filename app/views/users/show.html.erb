<h1>アカウント詳細ページ</h1>
<p>名前: <%= @user.name %></p>
<p>メールアドレス: <%= @user.email %></p>

<% if current_user == @user %>
  <%= link_to "編集", edit_user_path(@user), class: "btn btn-primary", id: "edit-user"  %>
  <%= link_to "削除", user_path(@user), method: :delete, data: {confirm: t('flash.common.confirm_destroy') }, class: "btn btn-danger", id: "destroy-user" %>
<% end %>